<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/PixelFont"
    android:gravity="center"
    android:background="@drawable/blackbg"
    android:orientation="vertical">

    <!-- Difficulty -->
    <TextView
        android:id="@+id/difficultyText"
        style="@style/spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficultySpinnerText"
        app:drawableRightCompat="@drawable/info_svg" />

    <Spinner
        android:id="@+id/difficultySpinner"
        style="@style/settingsItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Background Music -->
    <TextView
        android:id="@+id/musicText"
        style="@style/spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="@string/musicSpinnerText" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/musicSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/backgroundMusicTextView"
        style="@style/spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backgroundMusicSelector" />

    <RadioGroup
        android:id="@+id/soundtrackRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/firstOption"
            style="@style/settingsItemStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/firstOptionRadio" />

        <RadioButton
            android:id="@+id/secondOption"
            style="@style/settingsItemStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/secondOptionRadio" />

        <RadioButton
            android:id="@+id/thirdOption"
            style="@style/settingsItemStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/thirdOptionRadio" />

    </RadioGroup>
</LinearLayout>